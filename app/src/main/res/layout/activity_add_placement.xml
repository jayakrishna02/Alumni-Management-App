<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Campany Name"
                    android:id="@+id/pcname"
                    android:textSize="20sp"
                    android:inputType="textCapWords"
                    android:textStyle="bold"
                    android:textColor="#FF1A3954"
                    android:fontFamily="serif"
                    /></android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Today Date"
                    android:id="@+id/pcuploadtime"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:inputType="date"
                    android:textStyle="bold"
                    android:textColor="#FF1A3954"
                    android:fontFamily="serif"
                    /> </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Drive Date"
                    android:id="@+id/pcdate"
                    android:textSize="20sp"
                    android:inputType="date"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textColor="#FF1A3954"
                    android:fontFamily="serif"
                    /></android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Eligible year(ex:2019/2020)"
                    android:id="@+id/pcyear"
                    android:textSize="18sp"
                    android:inputType="textCapCharacters"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textColor="#FF1A3954"
                    android:fontFamily="serif"
                    /></android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Eligible Branches(ex:CSE/IT)"
                    android:id="@+id/pcbranch"
                    android:textSize="18sp"
                    android:inputType="textCapCharacters"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textColor="#FF1A3954"
                    android:fontFamily="serif"
                    /></android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/ShowImageView1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text=" upload logo "
                    android:textColor="#ffff"
                    android:id="@+id/plogo"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="#FF1A3954"
                    android:layout_marginLeft="40dp"/></LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/adddetails"
                android:textColor="#ffff"
                android:fontFamily="serif"
                android:layout_marginTop="30dp"
                android:background="#FF1A3954"
                android:text="Add Placement Details"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>