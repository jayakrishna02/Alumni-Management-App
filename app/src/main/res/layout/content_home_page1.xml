<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomePage1"
    tools:showIn="@layout/app_bar_home_page1">

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                android:layout_gravity="center_horizontal"
                />

        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/marquee1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="We keep your memories alive!! We keep your memories alive!!"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:background="#F2F2F2"
            android:scrollHorizontally="true"
            android:layout_marginTop="0dp"
            android:textSize="20dp"
            android:textColor="#002db3"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="10dp"
            app:cardElevation="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardBackgroundColor="#def419"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#ffff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:fontFamily="serif"
                android:layout_margin="7dp"
                android:textSize="16dp"
                android:focusable="true"
                android:justificationMode="inter_word"
                android:text="@string/home_data"
                android:textColor="#000"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="10dp"
            app:cardElevation="15dp"

            android:layout_marginLeft="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#def419"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Social Links"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:background="#4b4475"
                android:textColor="#ffff"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:background="#ffff"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/facebook"/>
                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/instagram"
                    />

                <ImageView
                    android:id="@+id/google"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/maillogo" />

            </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>